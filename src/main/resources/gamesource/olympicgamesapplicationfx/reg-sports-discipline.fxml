<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gamesource.olympicgamesapplicationfx.RegSportsDisciplineController"
            prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #CCCCCC;">
    <HBox prefHeight="-1" prefWidth="-1" alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
        <VBox alignment="CENTER" spacing="20" prefHeight="400.0" prefWidth="600.0">
            <Label text="Register Sports Discipline" style="-fx-font-size: 20px;"/>
            <GridPane alignment="CENTER" hgap="2" vgap="2">
                <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            </GridPane>

            <GridPane alignment="CENTER" hgap="1" vgap="2">
                <HBox  spacing="20">
                    <Button text="Submit" onAction="#handleSubmitButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-background-color: gray;"/>
                    <Button text="Back" onAction="#handleBackButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                </HBox>

            </GridPane>

            <Label fx:id="messageLabel"/>
        </VBox>
    </HBox>
</AnchorPane>
